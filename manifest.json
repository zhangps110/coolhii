{
    "name": "酷嗨- 浏览器助手",
    "version": "1.0.1",
    "description": "扩展右键菜单(页面菜单、划词菜单、图片菜单、链接菜单)，可自由设置、组合和排序菜单项。同时为浏览器增加5个快捷键操作并提供一个精简的网址导航",
	"manifest_version": 2,
    "icons":
    {
        "16": "img/logo-2.png",
        "48": "img/logo-2.png",
        "128": "img/logo-2.png"
    },
    "background":{"page": "background.html"},
    "browser_action": {"defaule_title": "酷嗨 - 浏览器助手"},
    "content_scripts": [{
		"matches": ["<all_urls>"],
        "js": ["js/plugins/keymaster.js","js/content_script.js"],
        "run_at": "document_start"
    }],
    "permissions":
    [
		"storage",
		"tabs",
		"contextMenus",
		"http://*/*",
        "https://*/*",
        "webRequestBlocking",
        "webRequest"
    ],
    "commands":{
		"quick-open-navigation":{
			"suggested_key":{
				"default": "Ctrl+Left",
				"mac": "Ctrl+Left"
			},
			"description": "Ctrl+Left，可直接调出导航"
		},
		"quick-open-website-up":{
			"suggested_key":{
				"default": "Ctrl+Up",
				"mac": "Ctrl+Up"
			},
			"description": "Ctrl+Up，快捷打开设置的网页"
		},
		"quick-open-website-down":{
			"suggested_key":{
				"default": "Ctrl+Down",
				"mac": "Ctrl+Down"
			},
			"description": "Ctrl+Down，快捷打开设置的网页"
		},
		"quick-open-website-right":{
			"suggested_key":{
				"default": "Ctrl+Right",
				"mac": "Ctrl+Right"
			},
			"description": "Ctrl+Right，快捷打开设置的网页"
		}
    },
    "web_accessible_resources": ["img/*","js/*","css/*"],
	"homepage_url": "http://www.coolhii.com"
}
